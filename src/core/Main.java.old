                if(!numb.isProbablePrime(1))
                    numb = new BigInteger("" + phi(numb.intValue()));
                // System.out.println(old + " -> " + numb + " ^ 6 = " + numb.pow(pow));
                newenc = newenc.replace("[" + as + "]", "[" + numb.pow(pow) + "]");
            }
        }
        return (newenc);
    }

